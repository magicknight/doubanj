#!/usr/bin/env node

let app = require('../app');
let fetchOnline = require('../fetch_online');
const HandleFetch = require('../scripts/handle_fetch');
const IQIYI = require('../scripts/iqiyi');
const MGTV = require('../scripts/mgtv');
let debug = require('debug')('doubanj:server');
let schedule = require('node-schedule');
let http = require('http');

let port = normalizePort(process.env.PORT || '3001');
app.set('port', port);

// 设置定时任务
let rule = new schedule.RecurrenceRule();  
var times = [0, 10, 20, 30, 40, 50];  
rule.minute  = times; 
schedule.scheduleJob(rule, () => {
  fetchOnline();
});

const rule3 = new schedule.RecurrenceRule(); 
const times3 = [3, 13, 23, 33, 43, 53];  
rule3.minute  = times3; 
schedule.scheduleJob(rule3, () => {
  IQIYI.fetch(HandleFetch);
});

const rule4 = new schedule.RecurrenceRule();  
const times4 = [4, 14, 24, 34, 44, 54];  
rule4.minute  = times4; 
schedule.scheduleJob(rule4, () => {
  MGTV.fetch(HandleFetch);
});

// 启动应用
let server = http.createServer(app);

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

function normalizePort(val) {
  let port = parseInt(val, 10);

  if (isNaN(port)) {
    return val;
  }

  if (port >= 0) {
    return port;
  }

  return false;
}


function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  let bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

function onListening() {
  let addr = server.address();
  let bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
